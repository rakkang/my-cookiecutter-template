# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_NAME={{ cookiecutter.project_slug }}
APP_KEY=

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Path Configuration (optional, defaults to project root)
# PROJECT_ROOT=                    # Override project root directory
# WORKSPACE_DIR=workspace          # Workspace directory (relative to PROJECT_ROOT or absolute path)
# OUTPUT_DIR=workspace/output      # Output directory (relative to WORKSPACE_DIR or absolute path)
# TEMP_DIR=workspace/temp          # Temp directory (relative to WORKSPACE_DIR or absolute path)

{%- if cookiecutter.use_langchain == "yes" %}
# Chat Configuration
CHAT_OPENAI_API_KEY=
CHAT_OPENAI_API_BASE=https://api.openai.com/v1
CHAT_MODEL_NAME=gpt-3.5-turbo
CHAT_REQUESTS_PER_MINUTE=200
CHAT_MAX_TOKENS=2000
CHAT_MAX_WORKERS=8
CHAT_TIMEOUT=1800

# Embedding Configuration
EMBED_OPENAI_API_KEY=
EMBED_OPENAI_API_BASE=https://api.openai.com/v1
EMBED_MODEL_NAME=gpt-3.5-turbo
EMBED_EMBEDDING_MODEL=text-embedding-3-small
EMBED_EMBEDDING_DIMENSION=1536
EMBED_REQUESTS_PER_MINUTE=120
EMBED_MAX_WORKERS=5
{%- endif %}
