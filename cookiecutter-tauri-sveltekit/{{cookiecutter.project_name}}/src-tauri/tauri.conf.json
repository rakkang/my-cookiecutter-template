{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "{{ cookiecutter.project_name }}",
  "version": "0.1.0",
  "identifier": "com.{{ cookiecutter.author_name | lower | replace(' ', '') }}.{{ cookiecutter.project_name | replace('-', '') }}",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "{{ cookiecutter.project_name }}",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

